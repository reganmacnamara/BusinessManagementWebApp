@using AutoMapper
@using BusinessManagementWebApp.Data
@using BusinessManagementWebApp.Data.Products.Entities

@inject ApiClient api
@inject IDialogService DialogService
@inject IMapper mapper
@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit"
                     Class="mr-3">

                Add Product

            </MudIcon>
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTable @bind-SelectedItem="selectedProduct"
                  Filter="new Func<Product, bool>(FilterFunc)"
                  Hover="true"
                  Items="@products"
                  RowClass="cursor-pointer">

            <ToolBarContent>
                <MudTextField @bind-Value="searchString"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Search"
                              Class="mt-0"
                              IconSize="Size.Medium"
                              Placeholder="Search" />
            </ToolBarContent>

            <HeaderContent>
                <MudTh>Code</MudTh>
                <MudTh>Name</MudTh>
                <MudTh>Description</MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd DataLabel="Code">@context.ProductCode</MudTd>
                <MudTd DataLabel="Name">@context.ProductName</MudTd>
                <MudTd DataLabel="Desc.">@context.ProductDescription</MudTd>
            </RowTemplate>

        </MudTable>
    </DialogContent>
    <DialogActions>
        <MudButton Class="px-10"
                   Color="Color.Success"
                   OnClick="OnAdd"
                   Variant="Variant.Filled">

            Add

        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    private bool loading;
    private List<Product> products = [];
    public string searchString = string.Empty;
    private Product selectedProduct = default!;

    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    private bool FilterFunc(Product entity)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true;
        if (entity.ProductCode.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (entity.ProductName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;
        if (entity.ProductDescription.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true;

        return false;
    }

    private async Task GetProducts()
    {
        loading = true;
        var _Response = await api.GetProductsAsync();

        products = _Response.Products ?? [];
        loading = false;
        this.StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        await GetProducts();
    }

    private async Task OnAdd()
    {
        if (selectedProduct is null)
        {
            Snackbar.Add("Please select a product.", Severity.Error);
            return;
        }

        MudDialog.Close(DialogResult.Ok(selectedProduct));
    }
}